{% comment %}
  Section: Avis clients par catégorie
  Description: Une section d'avis clients filtrable par catégories
{% endcomment %}

<div class="reviews-tabs-section">
  <h2 class="reviews-heading">Lisez les critiques qui mentionnent:</h2>
  
  <div class="tabs-container">
    <div class="tabs-row">
      <button class="tab-button active" data-category="all">Tous</button>
      <button class="tab-button" data-category="asthme">Asthme</button>
      <button class="tab-button" data-category="bpco">BPCO / Pneumonie</button>
      <button class="tab-button" data-category="bronchite">Bronchite</button>
      <button class="tab-button" data-category="congestion">Congestion</button>
      <button class="tab-button highlight" data-category="environnement">Environnement</button>
      <button class="tab-button" data-category="fumeur">Fumeur</button>
      <button class="tab-button" data-category="goutte">Goutte post-nasale</button>
      <button class="tab-button" data-category="mucus">Mucus</button>
      <button class="tab-button" data-category="respiration">Respiration</button>
    </div>
    <div class="tabs-row">
      <button class="tab-button" data-category="rhume">Rhume et grippe / Allergies</button>
      <button class="tab-button" data-category="sifflante">Sifflante</button>
      <button class="tab-button" data-category="sinus">Sinus</button>
      <button class="tab-button" data-category="soutien">Soutien à la santé pulmonaire</button>
      <button class="tab-button" data-category="toux">Toux</button>
      <button class="tab-button" data-category="voies">Voies respiratoires ouvertes</button>
    </div>
  </div>
  
  <div class="reviews-container">
    <!-- Section pour les avis - catégorie Environnement (active par défaut) -->
    <div class="reviews-category active" data-category="environnement">
      <div class="reviews-grid">
        <!-- Avis 1 -->
